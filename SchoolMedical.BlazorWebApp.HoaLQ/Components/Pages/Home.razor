@page "/"
@attribute [Authorize]

<PageTitle>Home</PageTitle>

<h1>Chào mừng bạn đã đăng nhập!</h1>

<AuthorizeView>
    <Authorized>
        <p>Thông tin của bạn:</p>
        <ul>
            <li><strong>Tên đầy đủ:</strong> @context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName)?.Value</li>
            <li><strong>Vai trò:</strong> @context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value</li>
        </ul>
    </Authorized>
</AuthorizeView>